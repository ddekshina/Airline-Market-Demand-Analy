# Airline Market Demand Analyzer - Environment Variables

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# API Keys (Optional - app works without them using synthetic data)

# AviationStack API - Free tier available at https://aviationstack.com
# Provides real-time flight data
# Free tier: 1,000 requests/month
AVIATIONSTACK_API_KEY=your_aviationstack_api_key_here

# OpenAI API - Paid service at https://platform.openai.com
# Used for AI-generated market insights
# Minimal cost: ~$0.01 per analysis
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=airline_data.db

# Application Settings
APP_NAME=Airline Market Demand Analyzer
APP_VERSION=1.0.0
DEBUG_MODE=True

# Data Collection Settings
MAX_FLIGHTS_PER_COLLECTION=200
DATA_RETENTION_DAYS=90
CACHE_TIMEOUT_SECONDS=3600

# Analysis Settings
TOP_ROUTES_LIMIT=15
PRICE_TREND_DAYS=30
DEMAND_THRESHOLD=5.0
